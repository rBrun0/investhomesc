    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": false,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
